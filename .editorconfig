[*]
charset = utf-8
end_of_line = lf

indent_style = tab
indent_size = 3

insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
