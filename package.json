{
  "name": "@s21toolkit/cli",
  "type": "module",
  "version": "0.14.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "build/dist",
    "readme.md"
  ],
  "scripts": {
    "lint:tsc": "tsc",
    "lint:biome": "biome check .",
    "lint": "pnpm lint:biome && pnpm lint:tsc",
    "fix:biome": "biome check --apply .",
    "fix": "pnpm fix:biome",
    "build:tsup": "tsup",
    "build": "pnpm lint && pnpm build:tsup",
    "watch:bundle": "NODE_ENV=development tsup --watch",
    "release": "npm version -m 'chore(release): %s' --",
    "prepublishOnly": "pnpm build",
    "postversion": "git push && git push --tags",
    "s21b": "pnpm run build:tsup && pnpm run build:compile && pnpm s21:run_binary",
    "s21:run_binary": "./build/bin/*",
    "s21:run": "./build/dist/main.mjs",
    "s21": "pnpm run build:tsup && pnpm s21:run"
  },
  "bin": "build/main.js",
  "main": "src/index.ts",
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@s21toolkit/shared": "^1.3.4",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^20.12.13",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@effect/cli": "^0.36.36",
    "@effect/platform": "^0.55.1",
    "@effect/platform-node": "^0.51.1",
    "@effect/schema": "^0.67.14",
    "@s21toolkit/client": "^1.0.0",
    "@s21toolkit/client-schema": "^73.4.3",
    "cache-manager": "^5.5.3",
    "cache-manager-fs-hash": "^2.0.0",
    "common-tags": "^1.8.2",
    "dayjs": "^1.11.11",
    "effect": "^3.2.5",
    "effect-log": "^0.31.3",
    "merge-anything": "^5.1.7",
    "simple-git": "^3.24.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "private": false,
  "license": "MIT",
  "volta": {
    "node": "20.14.0"
  }
}
